<% include ../partials/header %>
<div class="row">
  <div class="col-md-8">
    <h1><%= user.firstName + " " + user.lastName %></h1>
    <div class="thumbnail">
      <img src="<%= user.avatar %>" alt="User profile image">
      <div class="caption">
        <a href="mailto:<%= user.email %>"><%= user.email %></a>
        </div>
        <div class="caption">
          <a href="/forgot">change your password</a>

          </div>
      </div>
    </div>
    <div class="col-md-3">
      <h3><%= user.firstName %>'s Campgrounds</h3>
      <ul class="campgroundUl">
      <% campgrounds.forEach(function(campground){ %>
        <li class="campgroundList">
          <a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a>
          </li>
      <% }); %>
      </ul>
      </div>
  </div>


<% include ../partials/footer %>
